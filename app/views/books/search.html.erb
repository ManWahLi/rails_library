<section class="section">
  <div class="container">
    <h2 class="title is-size-3 mt-2 mb-5">Search results</h2>
      <p class="subtitle">
        <%= (@books.count) %> book<%= @books.count == 1 ? "" : "s" %> found
        <% if (params[:keywords] != "") %>
          for "<strong><%= params[:keywords]%></strong>"
        <% end %>
        <% if (params[:book][:publisher_id] != "") %>
          published by "<strong><%= @publishers.find_by(id: params[:book][:publisher_id]).name %></strong>"
        <% end %>
      </p>
    <table class="table is-fullwidth">
      <thead>
        <th>Cover</th>
        <th>Title</th>
        <th>Categories</th>
        <th>Authors</th>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.image_small_thumbnail, size: "40x40" %></td>
            <td><%= link_to book.title, book %></td>
            <td>
            <% book.categories.each do |category| %>
              <%= link_to "/categories/#{category.name}" do %>
                <span class="tag is-link is-light is-medium"><%= category.name %></span>
              <% end %>
            <% end %>
            </td>
            <td><%= book.authors.map{ |author| author.name }.join(", ") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>


